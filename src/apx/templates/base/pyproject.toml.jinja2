[project]
name = "{{app_name}}"
dynamic = ["version"]
description = "Add your description here"
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
    "fastapi>=0.119.0",
    "pydantic-settings>=2.11.0",
    "uvicorn>=0.37.0",
]

[dependency-groups]
dev = [
    "apx",
]

[tool.apx.metadata]
app-name = "{{app_name}}"
app-module = "{{app_name}}.backend.app:app"
metadata-path = "src/{{app_name}}/_metadata.py"


[tool.uv.sources]
apx = { git = "https://github.com/renardeinside/apx.git" }

[build-system]
requires = ["hatchling", "uv-dynamic-versioning>=0.7.0"]
build-backend = "hatchling.build"

[tool.hatch.version]
source = "uv-dynamic-versioning"

[tool.uv-dynamic-versioning]
vcs = "git"
format-jinja = "{% raw %}{{version}}{% endraw %}"

[tool.hatch.build.hooks.version]
path = "src/{{app_name}}/_version.py"
template = '''
version = "{version}"
'''

[tool.hatch.build]
artifacts = ["src/{{app_name}}/__dist__"]
exclude = ["src/{{app_name}}/ui"]